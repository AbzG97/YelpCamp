<%- include("../partials/header.ejs"); %>

<div class="container">
	<h1 style="text-align: center;">Edit a campground form</h1>
	<div class="row">
		
		<div style="width: 30%; margin: 0 auto;">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					Camp name: <input class="form-control" type="text" name="campName" value="<%= campground.name %>">
				</div>
				<div class="form-group">
					Camp image: <input class="form-control" type="text" name="campImg"  value="<%= campground.image %>">
					
				</div>
				
				<div class="form-group">
					Camp's description: <textarea class="form-control" name="campDesc" > <%= campground.desc %></textarea>
				</div>
					
				<div class="form-group">
					<input class="btn btn-lg btn-primary" type="submit" value="Update">
				</div>
				<div class="form-group">
					<a href="/campgrounds">Campgrounds page</a>
					
				</div>
				
			</form>	
			
		</div>
	</div>
</div>



<%- include("../partials/footer.ejs"); %>