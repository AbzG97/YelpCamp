<%- include("../partials/header.ejs"); %>

<div class="container">
	<header class="jumbotron">
		<div>
			<i class="fas fa-campground fa-sm"></i>
		</div>
		<h1>Current campgrounds</h1>
		<p>View our hand picked selection of camps accross the states</p>
		<p><a class="btn btn-primary btn-large "href="/campgrounds/campgroundsForm">Add a new campground</a></p>
	</header>

	<br>
	
	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% for(let camp of campgrounds){ %>
			<div class="col-md-3 col-sm-6" >
				<div class="thumbnail">
					<img width="250px" height="175px" src="<%= camp.image %>">	
					<div class="caption">
						<h4><%= camp.name %></h4>
					</div>
					<p>
						<a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More info</a>
					</p>
					
				</div>	
			</div>
		<% } %>
		
		
	</div>
		
</div>
<a href="/">Landing page</a>

<%- include("../partials/footer.ejs"); %>