<%- include("../partials/header.ejs"); %>

<div class="container">
	<h1 style="text-align: center;">Add a campground form</h1>
	<div class="row">
		
		<div style="width: 30%; margin: 0 auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					Camp name: <input class="form-control" type="text" name="campName">
					
				</div>
				<div class="form-group">
					Camp image: <input class="form-control" type="text" name="campImg" placeholder="paste image link here">
					
				</div>
				
				<div class="form-group">
					Camp's description: <textarea class="form-control" name="campDesc" ></textarea>
				</div>
					
				<div class="form-group">
					<input class="btn btn-lg btn-primary" type="submit" value="submit">
				</div>
				<div class="form-group">
					<a href="/campgrounds">Campgrounds page</a>
					
				</div>
				
			</form>	
			
		</div>
	</div>
</div>



<%- include("../partials/footer.ejs"); %>