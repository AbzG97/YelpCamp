<%- include("../partials/header.ejs"); %>

<div class="container">
	<h1 style="text-align: center;">Add a comment to <%= campground.name %> </h1>
	<div class="row">
		
		<div style="width: 30%; margin: 0 auto;">
			<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
				<div class="form-group">
					Comment description: <input class="form-control" type="text" name="text">
				</div>
				<div class="form-group">
					<input class="btn btn-lg btn-primary" type="submit" value="submit">
				</div>
				<div class="form-group">
					<a href="/campgrounds/<%= campground._id %>">Campgrounds page</a>
					
				</div>
				
			</form>	
			
		</div>
	</div>
</div>



<%- include("../partials/footer.ejs"); %>