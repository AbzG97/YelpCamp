<%- include("../partials/header.ejs"); %>

<div class="container">
	<h1 style="text-align: center;">Login to YelpCamp </h1>
	<div class="row">
		
		<div style="width: 30%; margin: 0 auto;">
			<form action="/Login" method="POST">
				<div class="form-group">
					username: <input class="form-control" type="text" name="username" required>
				</div>
				<div class="form-group">
					password: <input class="form-control" type="password" name="password" required>
				</div>
				<div class="form-group">
					<input class="btn btn-lg btn-primary" type="submit" value="Login">
				</div>
			</form>	
			
		</div>
	</div>
</div>



